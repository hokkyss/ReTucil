<%- include('../partials/header') %>
    <div id='map' class='map'></div>
    <script>
        var map = tt.map({
            key: 'RRF5SbdgsyPTbw2a6yRBv1TAv7WTZ3RT',
            container: 'map',
            center: nodes[0].geometry.coordinates,
            zoom: 15
        });

        var markers = [];

        function createMarker(geoJsonPoint) {
            var position = geoJsonPoint.geometry.coordinates;
            const markerElement = document.createElement('div');
            markerElement.innerHTML = "";
            marker = new tt.Marker().setLngLat(position).addTo(map);
            markers.push(marker);
            return marker;
        }

        function displayMarkers() {
            var i = 0;
            
            nodes.forEach(function (marker) {
                createMarker(marker);
                var popupOffsets = {
                    top: [0, 0],
                    bottom: [0, -70],
                    'bottom-right': [0, -70],
                    'bottom-left': [0, -70],
                    left: [25, -35],
                    right: [-25, -35]
                }
                var popup = new tt.Popup({offset: popupOffsets}).setHTML(marker.properties.name);
                markers[i].setPopup(popup).togglePopup();
                i++;
            });
        }
        
        displayMarkers();

        map.on('load', function() {
            graph.forEach(function (line, index) {
                map.addLayer({
                    'id' : 'route' + index,
                    'type' : 'line',
                    'source' : {
                        'type' : 'geojson',
                        'data': {
                            'type': 'Feature',
                            'geometry': {
                                'type': 'LineString',
                                'coordinates': 
                                    [line[0].geometry.coordinates,
                                    line[1].geometry.coordinates]
                            }
                        }
                    },
                    'paint' : {
                        'line-color' : 'red',
                        'line-width' : 5
                    } 
                })
            })
        });

        function createPath(){
            var pathLine = [];
            path.forEach(function (node) {
                pathLine.push(node.geometry.coordinates);
            })
            map.addLayer({
                'id' : 'path',
                'type' : 'line',
                'source' : {
                    'type' : 'geojson',
                    'data': {
                        'type': 'Feature',
                        'geometry': {
                            'type': 'LineString',
                            'coordinates': pathLine
                        }
                    }
                },
                'paint' : {
                    'line-color' : 'green',
                    'line-width' : 5
                } 
            });
        }

    </script>
</body>
</html>

