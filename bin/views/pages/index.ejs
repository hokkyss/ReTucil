                <form method="get" action="/">
                    <button class="btn btn-secondary" type="submit" style="margin-left: 10px; margin-right: 10px">Reload</button>
                </form>
            </li>
            <li class="nav-item">
                <button type="button" class="btn btn-secondary" onclick=createPath() style="margin-left: 10px; margin-right: 10px">Show Path</button>
